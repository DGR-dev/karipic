<%= form_with(model: @user, url: admin_create_user_path ,local: true) do |f| %>
    <% if @user.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este usuario no se pudo crear por las siguientes razones</h2>
            <ul>
                <% @user.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class = 'field'>
        <%= f.label :email %><br>
        <%= f.email_field :email %>
    </div>
    <div class = 'field'>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </div>
    <div class = 'field'>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
    </div>

    <div class = 'actions'>
        <%= f.submit %>
    </div>
<% end %>


